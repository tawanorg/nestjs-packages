# Run the container with `docker run -p 3000:3000 -t @packages/web`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system @packages/web && \
          adduser --system -G @packages/web @packages/web

COPY apps/web/dist @packages/web/
RUN chown -R @packages/web:@packages/web .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix @packages/web --omit=dev -f install

CMD [ "node", "@packages/web" ]
